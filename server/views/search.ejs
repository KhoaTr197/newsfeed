<!DOCTYPE html>
<html>
<%- include('partials/head') %>

  <body>
    <%- include('partials/preloader') %>
      <div class="container">
        <%- include('partials/header') %>
          <%- include('partials/news-ticker') %>
            <section id="contentSection">
              <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8">
                  <div class="left_content">
                    <div class="single_post_content">
                      <h2><span>
                          <%= resultCount %> search results for: "<%= searchTerm %>" in <%= category ? category
                                : 'all categories' %>
                        </span></h2>

                      <!-- Filter and Sort Options -->
                      <div class="search_filters">
                        <form action="/search" method="GET" class="filter-form">
                          <input type="hidden" name="keyword" value="<%= searchTerm %>">

                          <div class="row">
                            <div class="col-md-6">
                              <div class="form-group">
                                <label for="category">Category:</label>
                                <select name="category" id="category" class="form-control"
                                  onchange="this.form.submit()">
                                  <option value="">All Categories</option>
                                  <% if (typeof allCategories !=='undefined' && allCategories.length> 0) { %>
                                    <% allCategories.forEach(cat=> { %>
                                      <option value="<%= cat.id %>" <%=category==cat.id ? 'selected' : '' %>>
                                        <%= cat.cate_name %>
                                      </option>
                                      <% }); %>
                                        <% } %>
                                </select>
                              </div>
                            </div>

                            <div class="col-md-6">
                              <div class="form-group">
                                <label for="sort">Sort By:</label>
                                <select name="sort" id="sort" class="form-control" onchange="this.form.submit()">
                                  <option value="newest" <%=sort=='newest' ? 'selected' : '' %>>Newest First</option>
                                  <option value="oldest" <%=sort=='oldest' ? 'selected' : '' %>>Oldest First</option>
                                  <option value="views" <%=sort=='views' ? 'selected' : '' %>>Most Viewed</option>
                                </select>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>

                      <div class="single_post_content_span">
                        <ul class="business_catgnav wow fadeInDown">
                          <% if (resultCount> 0) { %>
                            <% const currentPage=parseInt(page); %>
                              <% for (const article of articles) { %>
                                <li class="business_catgnav_item">
                                  <figure class="bsbig_fig">
                                    <a href="/detail/<%= article.id %>" class="featured_img">
                                      <img alt="" src="/<%= article.thumbnail %>" />
                                      <span class="overlay"></span>
                                    </a>
                                    <figcaption>
                                      <a href="/detail/<%= article.id %>">
                                        <%= article.title %>
                                      </a>
                                    </figcaption>
                                    <div class="article-meta">
                                      <span style="color: #d083cf;">
                                        <span style="display: flex;gap:16px;">
                                          <p class="small text-secondary">
                                            <i class="fa fa-folder"></i>
                                            <%= article.cate_name %>
                                          </p>
                                          <p class="small text-secondary">
                                            <i class="fa fa-user"></i>
                                            <%= article.username %>
                                          </p>
                                          <p class="small text-secondary">
                                            <i class="fa fa-eye"></i>
                                            <%= article.views %> views
                                          </p>
                                        </span>
                                        <p class="small text-secondary">
                                          <i class="fa fa-calendar"></i>
                                          <%= article.published_date %>
                                        </p>
                                      </span>
                                      <p class="small text-secondary">
                                        <%= article.content.slice(0, 100) + "..." %>
                                      </p>
                                    </div>
                                  </figure>
                                </li>
                                <% } %>

                                  <!-- Pagination -->
                                  <% if (totalPages> 1) { %>
                                    <div class="pagination_area">
                                      <nav>
                                        <ul class="pagination">
                                          <!-- Previous page link -->
                                          <% if (currentPage> 1) { %>
                                            <li class="pagination-btn">
                                              <a href="/search?keyword=<%= searchTerm %>&page=<%= currentPage - 1 %>&category=<%= category %>"
                                                aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                              </a>
                                            </li>
                                            <% } %>

                                              <!-- Page numbers -->
                                              <% for (let i=1; i <=totalPages; i++) { %>
                                                <li class="pagination-btn <%= i === currentPage ? 'active' : '' %>">
                                                  <a
                                                    href="/search?keyword=<%= searchTerm %>&page=<%= i %>&category=<%= category %>">
                                                    <%= i %>
                                                  </a>
                                                </li>
                                                <% } %>

                                                  <!-- Next page link -->
                                                  <% if (currentPage < totalPages) { %>
                                                    <li class="pagination-btn">
                                                      <a href="/search?keyword=<%= searchTerm %>&page=<%= currentPage + 1 %>&category=<%= category %>"
                                                        aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                      </a>
                                                    </li>
                                                    <% } %>
                                        </ul>
                                      </nav>
                                    </div>
                                    <% } %>
                                      <% } else { %>
                                        <div class="no_results">
                                          <p>No results found for "<%= searchTerm %>" in <%= category ? category
                                                : 'all categories' %>. Please try a different search
                                                term.
                                          </p>
                                        </div>
                                        <% } %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                  <%- include('partials/right-sidebar') %>
                </div>
              </div>
            </section>
            <%- include('partials/footer', { websiteInfo: websiteInfo }) %>
      </div>
      <%- include('partials/scripts') %>
  </body>

</html>