<!DOCTYPE html>
<html>
<%- include('partials/head') %>

  <body>
    <%- include('partials/preloader') %>
      <div class="container">
        <%- include('partials/header') %>

          <section id="contentSection">
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <div class="left_content">
                  <div class="single_post_content">
                    <h2><span>
                        <%= category.cate_name %>
                      </span></h2>

                    <div class="breadcrumb">
                      <li><a href="/">Home</a></li>
                      <li><a href="/categories">Categories</a></li>
                      <li class="active">
                        <%= category.cate_name %>
                      </li>
                    </div>

                    <div class="category-articles">
                      <div class="row">
                        <% if (articles && articles.length> 0) { %>
                          <% articles.forEach(article=> { %>
                            <div class="col-md-4 col-sm-6 article-item">
                              <div class="article-box">
                                <a href="/detail/<%= article.id %>" class="featured_img">
                                  <img src="/<%= article.thumbnail %>" alt="<%= article.title %>"
                                    class="img-responsive">
                                  <span class="overlay"></span>
                                </a>
                                <div class="article-content">
                                  <h3><a href="/detail/<%= article.id %>">
                                      <%= article.title %>
                                    </a></h3>
                                  <div class="article-meta">
                                    <span><i class="fa fa-user"></i>
                                      <%= article.username %>
                                    </span>
                                    <span><i class="fa fa-calendar"></i>
                                      <%= new Date(article.published_date).toLocaleDateString() %>
                                    </span>
                                    <span><i class="fa fa-eye"></i>
                                      <%= article.views %> views
                                    </span>
                                  </div>
                                  <p>
                                    <%= article.content.substring(0, 100) %>...
                                  </p>
                                  <a href="/detail/<%= article.id %>" class="read-more">Read More <i
                                      class="fa fa-angle-right"></i></a>
                                </div>
                              </div>
                            </div>
                            <% }); %>
                              <% } else { %>
                                <div class="col-md-12">
                                  <div class="no-articles">
                                    <p>No articles found in this category.</p>
                                    <a href="/categories" class="btn btn-primary">Browse Other Categories</a>
                                  </div>
                                </div>
                                <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <%- include('partials/footer', { websiteInfo: websiteInfo }) %>
      </div>
      <%- include('partials/scripts') %>

        <style>
          .breadcrumb {
            background-color: #f5f5f5;
            padding: 10px 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            list-style: none;
          }

          .breadcrumb li {
            display: inline-block;
          }

          .breadcrumb li+li:before {
            content: "/";
            padding: 0 5px;
            color: #ccc;
          }

          .breadcrumb li a {
            color: #d083cf;
          }

          .breadcrumb li.active {
            color: #777;
          }

          .category-articles {
            margin-top: 20px;
          }

          .article-item {
            margin-bottom: 30px;
          }

          .article-box {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            height: 100%;
          }

          .article-box .featured_img {
            display: block;
            position: relative;
            overflow: hidden;
            height: 200px;
          }

          .article-box .featured_img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
          }

          .article-box:hover .featured_img img {
            transform: scale(1.05);
          }

          .article-box .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.2);
            opacity: 0;
            transition: opacity 0.3s ease;
          }

          .article-box:hover .overlay {
            opacity: 1;
          }

          .article-content {
            padding: 15px;
          }

          .article-content h3 {
            font-size: 18px;
            margin-bottom: 10px;
            font-family: 'Oswald', sans-serif;
          }

          .article-content h3 a {
            color: #333;
            text-decoration: none;
          }

          .article-content h3 a:hover {
            color: #d083cf;
          }

          .article-meta {
            font-size: 12px;
            color: #777;
            margin-bottom: 10px;
          }

          .article-meta span {
            margin-right: 10px;
          }

          .article-meta i {
            margin-right: 5px;
          }

          .read-more {
            display: inline-block;
            color: #d083cf;
            font-weight: bold;
            margin-top: 10px;
            text-decoration: none;
          }

          .read-more:hover {
            text-decoration: underline;
          }

          .no-articles {
            text-align: center;
            padding: 50px 0;
          }

          .no-articles p {
            font-size: 18px;
            color: #777;
            margin-bottom: 20px;
          }
        </style>
  </body>

</html>